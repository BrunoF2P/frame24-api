# ============================================================================
# Frame 24 - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!
# ============================================================================

# Application
APP_NAME=Frame 24

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/frame24
DATABASE_USERNAME=frame24
DATABASE_PASSWORD=frame24pass

# JPA/Hibernate
JPA_DDL_AUTO=update

# Flyway Migration
FLYWAY_ENABLED=true
FLYWAY_URL=jdbc:postgresql://localhost:5432/frame24
FLYWAY_USER=frame24
FLYWAY_PASSWORD=frame24pass

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=frame24
RABBITMQ_PASSWORD=frame24pass
RABBITMQ_VHOST=/

# Mail Server (MailHog for development)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_PROTOCOL=smtp

# AWS / MinIO (S3-compatible storage)
AWS_ACCESS_KEY=frame24
AWS_SECRET_KEY=frame24pass
AWS_REGION=us-east-1

# Actuator Configuration
ACTUATOR_ENDPOINTS=health,info
ACTUATOR_HEALTH_DETAILS=always
ACTUATOR_HEALTH_DB=true
ACTUATOR_HEALTH_DISK=true
ACTUATOR_HEALTH_RABBIT=true

# Spring Profile
SPRING_PROFILE=dev

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=50mb

# ============================================================================
